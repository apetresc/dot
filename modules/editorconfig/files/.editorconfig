root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
#insert_final_newline = true

[*.py]
indent_size = 4
max_line_length = 88

[*.java]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.rs]
indent_size = 4

[*.lua]
max_line_length = 80

[*.csv]
#insert_final_newline = false

[Makefile]
indent_style = tab
indent_size = 4

