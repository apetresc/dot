{
  "python.jediEnabled": true,
  "python.formatting.autopep8Args": ["--max-line-length", "100"],
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt", "pom.xml"],
      "filetypes": ["scala", "sbt"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
  }
}
